<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".PlanetDetail">


    <ImageView
        android:scaleY="1.2"
        android:scaleX="1.2"
       android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/baf"/>
    <LinearLayout
        android:layout_marginTop="-50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/planet_info"
            android:src="@drawable/mars"
            android:elevation="40dp"
            android:layout_gravity="center_horizontal"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/secondary"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="-50dp">



            <LinearLayout
                android:gravity="center_horizontal"
                android:paddingTop="60dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/title_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earth"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>



                <TextView
                    android:id="@+id/galaxy_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Milkway Galaxy"
                    android:textColor="@color/subtext"
                    android:textSize="14sp"
                    android:layout_marginTop="-5dp"/>


                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#03A9F4"
                    android:orientation="vertical"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginTop="-5dp"
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_location_on_24"/>
                    <TextView
                        android:id="@+id/distance_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:text="54.6m.km"
                        android:textColor="@color/subtext"
                        android:textSize="14sp"/>


                    <ImageView
                        android:layout_marginTop="-3dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_cached_24"/>
                    <TextView
                        android:id="@+id/gravity_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="3.711 m/ss"
                        android:textColor="@color/subtext"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:padding="14dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:text="Overview"
                   android:textAllCaps="true"
                   android:textSize="16sp"
                   android:textColor="@color/white"
                   android:letterSpacing="0.1"/>

               <View
                   android:layout_width="30dp"
                   android:layout_height="1dp"
                   android:layout_marginTop="5dp"
                   android:background="#03A9F4"
                   android:orientation="vertical"/>
               <TextView
                   android:textSize="13sp"
                   android:textColor="@color/subtext"
                   android:id="@+id/overview_info"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:letterSpacing="0.1"
                   android:lineSpacingExtra="1dp"
                   android:text="Quyoshnikidan bir necha oʻn-yuz marta kam. Antik davrda, hatto undan avval yettita „sayyora“: Quyosh, Oy, Merkuriy, Venera, Mars, Yupiter, Saturn „qoʻzgʻalmas“ yulduzlar orasidan ajratilib koʻrsatilgan edi. Bu yoritkichlarning hammasi Yer atrofida aylanadi, deb hisoblanardi. 16-asr boshidagina polyak astronomi, geliosentrik tizim muallifi Nikolai Kopernik Yer atrofida faqat Oy aylanishini, qolgan sayyoralar esa Yer kabi Quyosh tizimi markazi boʻlgan"
                   android:textStyle="bold"/>



           </LinearLayout>
        </ScrollView>


        <TextView
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Book Your Ride"
            android:textAllCaps="true"
            android:gravity="center"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/button_info"
            android:background="@drawable/bg_foter"/>
    </LinearLayout>
</LinearLayout>